<% provide(:title, "| Sign in") %>
<h1>Sign in</h1>
<div class="row">
  <div class="span6 offset3">
<%= form_for(:session) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.hidden_field :html, :value => true %>

<%= f.submit 'Sign in', class: "btn btn-large btn-primary" %>

<% end %>

</div>
</div>